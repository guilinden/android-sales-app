<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".selecionarTipoProduto">

    <TextView
        android:id="@+id/txtTipoProduto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Selecione o tipo do produto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:onClick="selectBtnFood"
        android:text="Comida"
        app:layout_constraintTop_toBottomOf="@+id/txtTipoProduto"
        tools:layout_editor_absoluteX="161dp" />

    <Button
        android:id="@+id/btnDrink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:onClick="selectBtnDrink"
        android:text="Bebida"
        app:layout_constraintTop_toBottomOf="@+id/btnFood"
        tools:layout_editor_absoluteX="160dp" />
</android.support.constraint.ConstraintLayout>